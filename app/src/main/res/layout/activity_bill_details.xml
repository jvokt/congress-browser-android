<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bill_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jvokt.csci571.congressapi.BillDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton android:id="@+id/favoriteBill"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:src="@drawable/favorites"
            android:background="#00ffffff"
            android:onClick="onToggleStar"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp" />
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favoriteBill"
            android:stretchColumns="*">
            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Bill ID:"
                    android:padding="3dip"
                    android:textStyle="normal|bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tvId"
                    android:text="ID"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Title:"
                    android:padding="3dip"
                    android:textStyle="normal|bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tvTitle"
                    android:text="ID"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Bill Type:"
                    android:padding="3dip"
                    android:textStyle="normal|bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tvType"
                    android:text="ID"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Sponsor:"
                    android:padding="3dip"
                    android:textStyle="normal|bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tvSponsor"
                    android:text="ID"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Chamber:"
                    android:padding="3dip"
                    android:textStyle="normal|bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tvChamber"
                    android:text="ID"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Introduced On:"
                    android:padding="3dip"
                    android:textStyle="normal|bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tvIntroduced"
                    android:text="ID"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Status:"
                    android:padding="3dip"
                    android:textStyle="normal|bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tvStatus"
                    android:text="ID"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Version Status:"
                    android:padding="3dip"
                    android:textStyle="normal|bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tvVersionStatus"
                    android:text="ID"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Congress URL:"
                    android:padding="3dip"
                    android:textStyle="normal|bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tvCongressURL"
                    android:text="ID"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Bill URL:"
                    android:padding="3dip"
                    android:textStyle="normal|bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/tvBillURL"
                    android:text="ID"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</ScrollView>

